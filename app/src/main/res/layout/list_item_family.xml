<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/card_outer_frame"
    android:id="@+id/layout_user">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@style/card_inner_frame">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            style="@style/card_content">

            <ImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/image_people"
                android:scaleType="centerInside"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src ="@drawable/ic_man"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:layout_gravity="center"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/name_people"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:gravity="center_vertical"
                    android:textStyle="normal"
                    android:text = "Roberto Rey MagaÃ±a"
                    android:typeface="normal"
                    android:paddingLeft="10dp"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="10dp"
                    android:text="Actualizado: 19/04/2013 15:20"
                    android:paddingLeft="10dp"
                    android:id="@+id/txt_status_update" />
            </LinearLayout>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_status_ok"
                android:id="@+id/image_status" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>